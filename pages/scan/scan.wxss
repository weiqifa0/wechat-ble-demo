/* pages/scan/scan.wxss */
.scan_view{
  margin: 14px;
}
.result{
  padding: 13px;
  direction: flex;
  flex-direction: column;
  background-color: gainsboro;
  box-shadow: 0 3px 3px 0 gainsboro;
  height:90%;
  width: 90%;
  flex-wrap:nowrap;
}

.result_text{
  width: 100%;
  height: 20px;
  color: black;
  font-size: 11px;
  display: block;
}

.btn_scan{
  margin-top: 16px
}

.scan_result_title{
  color: black;
  font-size: 14px;
  display: block;
  margin-top: 11px;
}
.btn_scan{
  color: white;
  font-size: 13px;
}

.btn_con{
  color: white;
  font-size: 10px;
  flex-direction: row;
  background-color: rgb(137, 216, 143);
  height:80%;
  width: 25%;
}

.scan_result{
  display: flex;
  flex-direction: row;
  padding: 11px;
  background-color: gainsboro;
  height: 30px;
  margin-top: 8px;
}

.notify_result{
  display: flex;
  flex-direction: column;
  background-color: gainsboro;
  box-shadow: 0 3px 3px 0 gainsboro;
  margin: 16px;
  padding: 16px;
}

.notify_result_data{
  font-size: 11px;
  display: block;
}